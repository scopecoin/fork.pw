<!DOCTYPE html>
<html lang="en">
    
    <% include ../../partials/head %>
  <body>

    <% include ../../partials/header %>

    <div class="container">
      <% include ../../partials/alerts %>
      <div id='first-step' class="row">
        <div class="offset2 col-md-6 mt-5">
          <div id="register-body">
            <h2 id="register_header"><%-__("Register a new account")%></h2>
            <form id="signup-form" class="paper-form" action="/signup" method="post">
              <div id="signup_username" class="form-group">
                <label for="id_username" class="control-label  requiredField"><%-__("Username")%><span class="asteriskField">*</span> </label>
                <input class="textinput textInput form-control" id="id_username" maxlength="30" name="username" type="text" required>
                <div class="invalid-feedback"><%-__("This field is required")%>.</div>
              </div>
              <div id="signup_email" class="form-group">
                <label for="id_email" class="control-label  requiredField"><%-__("Email")%><span class="asteriskField">*</span> </label>
                <input class="emailinput form-control" id="id_email" name="email" type="email" title="Please enter an email address" aria-describedby="emailHelp" required>
                <small id="emailHelp" class="form-text text-muted"><%-__("Some providers may to block emails")%></small>
                <div class="invalid-feedback"><%-__("Please enter valid email")%></div>
              </div>
              <div id="signup_password1" class="form-group">
                <label for="id_password1" class="control-label  requiredField"><%-__("Password")%><span class="asteriskField">*</span> </label>
                <input class="textinput textInput form-control" id="id_password1" name="password1" type="password" required>
                <div class="invalid-feedback"><%-__("This field is required")%>.</div>
              </div>
              <div id="signup_password2" class="form-group">
                <label for="id_password2" class="control-label  requiredField"><%-__("Password (again)")%><span class="asteriskField">*</span> </label>
                <input class="textinput textInput form-control" id="id_password2" name="password2" type="password" required> 
                <div class="invalid-feedback"><%-__("The two password fields didn't match")%>.</div>
              </div>
              <div class="g-recaptcha" data-sitekey="<%- recaptcha%>"></div>
              <p>
                <button class="btn btn-success" id="register-page-confirm-button"><%-__("Register")%></button>
              </p>
            </form>
          </div>
          <p><%-__("Already have an account")%>? <a href="/login"><%-__("Login")%></a></p>
          <p><%-__("Forgot password")%>? <a href="/password_reset"><%-__("Reset your password")%></a></p>
        </div>
      </div>
      <div id='second-step' class="row" style="display:none;">
        <div class="offset2 col-md-6">
          <div id='success' style="display:none;">
            <h2><%-__("Almost done")%>!</h2>
            <p><%-__("Please check your E-mail for further instructions")%>
          </div>
          <div id='fail' style="display:none;">
            <h2><%-__("Something wrong")%> ((</h2>
            <p><a href='/signup'><%-__("Please try again")%>    .</a>
          </div>
        </div>
      </div>
    </div> <!-- /container -->

    <% include ../../partials/footer %>
    <script src='/js/signup.js'></script>
  </body>
</html>
