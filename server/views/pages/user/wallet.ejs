<!DOCTYPE html>
<html lang="en">
    
    <% include ../../partials/head %>
  <body>

    <% include ../../partials/header %>

    <% var messageSuccess = ""; var messageFail = ""; var coupon = "";%>
    <% try{ %>
    <%  if (error) messageFail = message; %>
    <%  if (!error) messageSuccess = message; %>
    <% if (data && data.coupon) coupon = data.coupon;%>
    <% }catch(e){console.log(e.message)}%>
    
    <input id='id_server_message_success' type='hidden' value="<%= escape(messageSuccess) %>">
    <input id='id_server_message_fail' type='hidden' value="<%= escape(messageFail) %>">
    <input id='id_coupon' type='hidden' value="<%= coupon %>">

    <div class="container-fluid">
        <% include ../../partials/alerts %>
        
            <div class='row'>
                <div class="col-md-12">
                        <h2 class="my-4"><%-__("Wallet")%></h2>
                    <div class="card">
                        <div class="card-header">
                            <%-__("Balance")%>
                        </div>
                        <div class="card-body">
                            <table class="table table-striped table-bordered">
                              <thead>
                                <tr>
                                  <th scope="col"><%-__("Currency")%></th>
                                  <th scope="col"><%-__("Balance")%></th>
                                  <th scope="col"><%-__("Awaiting deposit")%></th>
                                  <th scope="col"><%-__("Reserved in orders")%></th>
                                  <th scope="col"><%-__("Wallet Management")%></th>
                                </tr>
                              </thead>
                              <tbody id='id_wallet_body'>
                              </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 text-center mt-5">
                    <div class="fiat-deposit p-3 m-3 d-inline-block disabled">
                        <img class="" src="/privat24.png" />
                    </div>
                    <div class="fiat-deposit p-3 m-3 d-inline-block">
                            <img src="/qiwi.png" />
                        </div>
                        <div class="fiat-deposit p-3 m-3 d-inline-block disabled">
                                <img class="" src="/yandex.png" />
                            </div>
                            <div class="fiat-deposit p-3 m-3 d-inline-block">
                                    <img src="/sberbank.png" />
                                </div>
                </div>
            </div>
            <div class='row justify-content-md-center'>
                <div class='col-md-12 text-center mt-3'>
                    <div id="ballsWaveG" class="lds-facebook"><div></div><div></div><div></div></div>
                    <!-- <div id="ballsWaveG">
                    	<div id="ballsWaveG_1" class="ballsWaveG"></div>
                    	<div id="ballsWaveG_2" class="ballsWaveG"></div>
                    	<div id="ballsWaveG_3" class="ballsWaveG"></div>
                    	<div id="ballsWaveG_4" class="ballsWaveG"></div>
                    	<div id="ballsWaveG_5" class="ballsWaveG"></div>
                    	<div id="ballsWaveG_6" class="ballsWaveG"></div>
                    	<div id="ballsWaveG_7" class="ballsWaveG"></div>
                    	<div id="ballsWaveG_8" class="ballsWaveG"></div>
                    </div>                     -->
                </div>
            </div>
    </div> <!-- /container -->

    <div style="display:none">
        <span id="deposit-text"><%-__("Deposit")%></span>
        <span id="withdraw-text"><%-__("Withdraw")%></span>
        <span id="history-text"><%-__("History")%></span>
        <span id="withdraw-your-text"><%-__("Withdraw your")%></span>
    </div>

    <% include ../../partials/footer %>
    <script src='/js/wallet.js'></script>
  </body>
</html>
